<div class="bg-white p-6 rounded-lg shadow-md mt-4">
  <h1 class="text-3xl font-semibold mb-5">Foods</h1>

  <ul class="space-y-2">
    <% @foods.each do |food| %>
      <li>
        <%= link_to food.name, food, class: "text-blue-500 hover:text-blue-700" %>
        <%= link_to "Show", food, class: "ml-2 text-gray-500 hover:text-gray-700" %>
        <%= button_to "Destroy", food, method: :delete, data: { confirm: "Are you sure you want to delete #{food.name}?" }, class: "ml-2 bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "New Food", new_food_path, class: "mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-800" %>
  </div>
