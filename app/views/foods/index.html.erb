<div class="flex-container">
  <div class="bg-white p-6 rounded-lg shadow-md mt-4">
    <%= link_to "New Food", new_food_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-800" %>
  </div>


<div class="bg-white p-4 rounded-lg shadow-md mx-auto max-w-3xl">
  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Food</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Measurement Unit</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @foods.each do |food| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= food.name %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= food.measurement %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= food.price %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }, class: "bg-red-500 text-white font-bold py-2 px-4 rounded" %>
          </td>
        </tr> 
      <% end %>
    </tbody>
  </table>
 </div>
</div>

